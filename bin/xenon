#! /usr/bin/env ruby

require 'rack'
require 'xenon'

Dir.glob(File.join(Dir.pwd, "models", "*.rb")).each do |file|
  require file
end

load File.join(Dir.pwd, "resources.rb")

Xenon::Schema.create_tables!

app = Rack::Builder.new do
  run Application.new
end

Rack::Handler::WEBrick.run app, :Port => 5678
